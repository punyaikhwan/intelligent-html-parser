# Flask Application Settings
HOST=0.0.0.0
PORT=5000
DEBUG=False
MAX_CONTENT_LENGTH=16777216
JSON_SORT_KEYS=False
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# ML Model Settings
ML_MODEL_NAME=google/flan-t5-small
SIMILARITY_MODEL=sentence-transformers/all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.6
MIN_ATTRIBUTES=2

# Hugging Face Settings
HF_HUB_DISABLE_SYMLINKS_WARNING=True
# HUGGINGFACE_HUB_CACHE=/path/to/cache
# TRANSFORMERS_CACHE=/path/to/cache

# Performance Settings
# TORCH_NUM_THREADS=4
# OMP_NUM_THREADS=4

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Parser Strategy Settings
ENABLE_JSON_SCRIPT_PARSER=True
ENABLE_TABLE_PARSER=True
ENABLE_GENERAL_PARSER=True
ENABLE_ML_FALLBACK=True

# Request/Response Settings
REQUEST_TIMEOUT=30
MAX_RESULTS_PER_QUERY=100

# Development/Testing Settings
TESTING=False

# Security Settings
CORS_ORIGINS=*

# Database/Cache Settings (for future use)
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=sqlite:///app.db

# API Rate Limiting (for future use)
RATE_LIMIT_PER_MINUTE=100